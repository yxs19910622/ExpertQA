<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.izhong.expert.dao.KeyWordDao">

	<cache/>
	
	<select id="qryHotWordsAll" resultType="QueryHotWords">
		SELECT * FROM LABQA_QUERYHOTWORDS
	</select>

	<insert id="addQueryHotWord" parameterType="string" flushCache="true">
		INSERT INTO LABQA_QUERYHOTWORDS 
			(WORDID,WORD) 
		VALUES
			(SEQ_LABQA_QUERYHOTWORDS.NEXTVAL,#{keyword})
	</insert>
	
	<delete id="delQueryHotWord" parameterType="string" flushCache="true">
		DELETE LABQA_QUERYHOTWORDS WHERE WORDID = #{wordId}
	</delete>
</mapper>
